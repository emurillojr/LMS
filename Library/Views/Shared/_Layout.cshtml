<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Providence ILS</title>
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-blue.min.css" />
    <link href=”//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css” rel=”stylesheet”>
    <link href="https://fonts.googleapis.com/css?family=Coda" rel="stylesheet">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="custom-header mdl-layout__header mdl-layout__header--waterfall">
            <div class="mdl-layout__header-row" style="background-color:black">
                <!-- Title -->
                <span class="mdl-layout-title logo"><a href="/">Providence Library ILS</a></span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="mdl-navigation__link" asp-controller="Asset" asp-action="Index">Assets</a>
                    <a class="mdl-navigation__link" asp-controller="Patron" asp-action="Index">Patrons</a>
                    <a class="mdl-navigation__link" asp-controller="Branch" asp-action="Index">Branches</a>
                    @*<a class="mdl-navigation__link" asp-controller="AssetsCRUD" asp-action="Index">AssetCRUD</a>*@
                    <a class="mdl-navigation__link" asp-controller="PatronsCRUD" asp-action="Index">PatronCRUD</a>
                    <a class="mdl-navigation__link" asp-controller="BranchesCRUD" asp-action="Index">BranchCRUD</a>

                </nav>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Providence Library</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" asp-controller="Home" asp-action="Index">Home</a>
                <a class="mdl-navigation__link" asp-controller="Asset" asp-action="Index">Assets</a>
                <a class="mdl-navigation__link" asp-controller="Patron" asp-action="Index">Patrons</a>
                <a class="mdl-navigation__link" asp-controller="Branch" asp-action="Index">Branches</a>
                @*<a class="mdl-navigation__link" asp-controller="AssetsCRUD" asp-action="Index">AssetCRUD</a>*@
                <a class="mdl-navigation__link" asp-controller="PatronsCRUD" asp-action="Index">PatronCRUD</a>
                <a class="mdl-navigation__link" asp-controller="BranchesCRUD" asp-action="Index">BranchCRUD</a>

            </nav>
        </div>
        <div class="page-content">
            @*where all the views will be rendered by default*@
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</body>
</html>
