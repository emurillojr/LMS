@model Library.Models.Branch

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
}

@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
}

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted">Delete Branch Information</h2>
        <div class="row1">
            <a asp-controller="Branch" asp-action="Detail" asp-route-id="@Model.Id"><i class="fas fa-arrow-circle-left fa-3x" style="color:black; margin-right:30px"></i></a>
            <h2 style="color:orangered">Are you sure you want to delete this?</h2>
        </div>
    </div>
</div>
<div class="jumbotron">
    <div class="row">
        <img src="/images/@Model.ImageUrl" />
    </div>
    <div class="row branchInfo">
        <div class="col-md-8">
            <div>
                <h2>@Model.Name</h2>
                <div class="branchContact">
                    <div id="branchAddress">Address: @Model.Address</div>
                    <div id="branchTel">Telephone: @Model.Telephone</div>
                </div>
                <div id="branchDescription">
                    <p class="caption">@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 detailInfo">
            <table>
                <tr>
                    <td class="itemLabel">Date Opened: </td>
                    <td class="itemValue">@Model.OpenDate.Date.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <td class="itemLabel">Number Of Patrons: </td>
                    <td class="itemValue">@Model.Patrons</td>
                </tr>
                <tr>
                    <td class="itemLabel">Number of Assets: </td>
                    <td class="itemValue">@Model.LibraryAssets</td>
                </tr>
                <tr>
                    <td class="itemLabel">Value of Assets: </td>
                    <td class="itemValue">$@Model.LibraryAssets</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirm Delete" class="btn btn-danger btn-lg" />
</form>